@model IEnumerable<ZeroHunger.DTO.Collect_RequestDTO>

@{
    ViewBag.Title = "Employee";
    ViewBag.Employee = Session["employee"];
    ViewBag.Emp = Session["em"];
}

<h2>@ViewBag.Emp</h2>
@if (TempData["collect"] != null)
{
    <div class="alert alert-danger">
        @TempData["collect"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Restid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            Option
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Restid)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Location)
            </td>
            <td>
                <form method="post" action="">
                    <input type="hidden" name="Name" value=@ViewBag.Emp>
                    <input type="submit" name="collect" value="Mark Collected" class="btn btn-outline-success" />
                </form>
            </td>
        </tr>

    }
</table>
